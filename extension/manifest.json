{
  "manifest_version": 3,
  "name": "Memento - Session Capture",
  "version": "1.0.0",
  "description": "Capture and classify your browser session context",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Memento - Capture Session"
  }
}
